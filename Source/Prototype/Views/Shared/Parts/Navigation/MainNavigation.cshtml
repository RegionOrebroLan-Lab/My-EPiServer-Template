@model IViewModel
<nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
	@if(Model.Layout.MainNavigation.Content != null)
	{
		<a class="navbar-brand" href="@Model.Layout.MainNavigation.Url">@Model.Layout.MainNavigation.Text</a>
	}
	@if(Model.Layout.MainNavigation.Any() || Model.Layout.CultureNavigation.Count > 1)
	{
		<button aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation" class="navbar-toggler" data-toggle="collapse" data-target="#navbar" type="button">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="navbar">
			<ul class="navbar-nav mr-auto">
				@foreach(var node in Model.Layout.MainNavigation.MaximumItems(10))
				{
					<li class="nav-item">
						<a class="nav-link@(node.Active || node.ActiveAncestor ? " active" : string.Empty)" href="@node.Url">@node.Text</a>
					</li>
				}
			</ul>
			<partial name="~/Views/Shared/Parts/Navigation/CultureNavigation.cshtml" />
		</div>
	}
</nav>
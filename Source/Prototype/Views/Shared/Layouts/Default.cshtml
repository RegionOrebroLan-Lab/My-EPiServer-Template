@model PageModel
<!DOCTYPE html>
<html lang="@Model.View.Layout.Culture">
	<head>
		@if(IsSectionDefined("HeadContent"))
		{
			@RenderSection("HeadContent")
		}
		else
		{
			if(IsSectionDefined("HeadMeta"))
			{
				@RenderSection("HeadMeta")
			}
			else
			{
				<partial model="@Model.View" name="~/Views/Shared/Parts/Head/Meta.cshtml" />
			}
			if(IsSectionDefined("HeadTitle"))
			{
				@RenderSection("HeadTitle")
			}
			else
			{
				<partial model="@Model.View" name="~/Views/Shared/Parts/Head/Title.cshtml" />
			}
			if(IsSectionDefined("HeadLink"))
			{
				@RenderSection("HeadLink")
			}
			else
			{
				<partial model="@Model.View" name="~/Views/Shared/Parts/Head/Link.cshtml" />
			}
			if(IsSectionDefined("HeadScript"))
			{
				@RenderSection("HeadScript")
			}
			else
			{
				<partial model="@Model.View" name="~/Views/Shared/Parts/Head/Script.cshtml" />
			}
			if(IsSectionDefined("AdditionalHeadContent"))
			{
				@RenderSection("AdditionalHeadContent")
			}
		}
	</head>
	<body>
		@if(IsSectionDefined("Header"))
		{
			@RenderSection("Header")
		}
		else
		{
			<partial model="@Model.View" name="~/Views/Shared/Parts/Header.cshtml" />
		}
		@if(IsSectionDefined("Main"))
		{
			@RenderSection("Main")
		}
		else
		{
			<main role="main" class="container">
				<div class="row">
					@if(Model.View.Layout.SubNavigation.Any())
					{
						<partial model="@Model.View" name="~/Views/Shared/Parts/Navigation/SubNavigation.cshtml" />
						@:<div class="col-md-9">
					}
					else
					{
						@:<div class="col-md-12">
					}
					<h1>@(Model.View.Heading ?? Model.View.Name)</h1>
					@if(!string.IsNullOrEmpty(Model.View.HtmlContent))
					{
						@Html.Raw(Model.View.HtmlContent)
					}
					@RenderBody()
					@Html.Raw("</div>")
				</div>
			</main><!-- /.container -->
		}
		@if(IsSectionDefined("Footer"))
		{
			@RenderSection("Footer")
		}
		else
		{
			<partial model="@Model.View" name="~/Views/Shared/Parts/Footer.cshtml" />
		}
		@if(IsSectionDefined("Scripts"))
		{
			@RenderSection("Scripts")
		}
		else
		{
			<partial model="@Model.View" name="~/Views/Shared/Parts/Scripts.cshtml" />
		}
		@if(IsSectionDefined("AdditionalScripts"))
		{
			@RenderSection("AdditionalScripts")
		}
	</body>
</html>
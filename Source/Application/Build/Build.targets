<Project>






	<Target Name="PopulateFileToCopy">
		<ItemGroup>
			<FileToCopy Include="$(PackagesDirectory)EPiServer.*\content\modules\_protected\**\*">
				<DestinationFile>Modules\_Protected\$([System.String]::Copy(%(RecursiveDir)).Split('\', StringSplitOptions.RemoveEmptyEntries)[4])\%(Filename)%(Extension)</DestinationFile>
			</FileToCopy>
			<FileToCopy Include="$(PackagesDirectory)EPiServer.CMS.*\content\App_Data\GeoLiteCity.dat">
				<DestinationFile>App_Data\%(Filename)%(Extension)</DestinationFile>
			</FileToCopy>
		</ItemGroup>
	</Target>
	
	
	
	
	
	
	
	
	
	
	
	


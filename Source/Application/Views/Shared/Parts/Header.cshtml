@model IViewModel
<nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
	@if(Model.Layout.MainNavigation != null)
	{
		@Html.ContentLink(Model.Layout.MainNavigation.Content, null, new {@class = "navbar-brand" + (Model.Layout.MainNavigation.Selected ? " active" : string.Empty)})
		if(Model.Layout.MainNavigation.Any())
		{
			<button aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation" class="navbar-toggler" data-toggle="collapse" data-target="#navbar" type="button">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbar">
				<ul class="navbar-nav mr-auto">
					@foreach(var node in Model.Layout.MainNavigation)
					{
						<li class="nav-item">
							@Html.ContentLink(node.Content, null, new {@class = "nav-link" + (node.Selected ? " active" : string.Empty)})
						</li>
					}
				</ul>
			</div>
		}
	}
</nav>
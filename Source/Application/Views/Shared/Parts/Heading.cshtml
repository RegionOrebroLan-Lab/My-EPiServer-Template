@model InformationPage
@if(Model != null)
{
	if(PageEditing.PageIsInEditMode && !DataFactory.Instance.ProviderMap.IsEntryPoint(Model.ContentLink) && string.IsNullOrEmpty(Model.ContentLink.ProviderName))
	{
		<span>
			<i>@Html.Translate("/editing/nameorheadingash1")</i>
		</span>
		<h1>
			@Html.PropertyFor(model => model.Name)
			@Html.PropertyFor(model => model.Heading)
		</h1>
	}
	else
	{
		<h1>@(string.IsNullOrEmpty(Model.Heading) ? Model.Name : Model.Heading)</h1>
	}
}